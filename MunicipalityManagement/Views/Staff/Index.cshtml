@model IEnumerable<MunicipalityManagement.Models.Staff>

@{
    ViewData["Title"] = "Staff Management";
}

<h2 class="mb-4">Manage Staff</h2>
<a class="btn btn-success mb-3" href="@Url.Action("Create", "Staff")">Add New Staff Member</a>

<table class="table table-striped table-hover shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>Full Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
            <tr>
                <td>@staff.FullName</td>
                <td>@staff.Position</td>
                <td>@staff.Department</td>
                <td>
                    <a href="@Url.Action("Details", "Staff", new { id = staff.StaffID })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "Staff", new { id = staff.StaffID })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Staff", new { id = staff.StaffID })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
