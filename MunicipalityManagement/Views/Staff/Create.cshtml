@model MunicipalityManagement.Models.Staff

@{
    ViewData["Title"] = "Add New Staff Member";
}

<h2>Add New Staff Member</h2>

<div class="card p-4 shadow-sm">
    @using (Html.BeginForm("Create", "Staff", FormMethod.Post))
    {
        <!-- Full Name -->
        <div class="form-group">
            @Html.LabelFor(m => m.FullName)
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Enter full name" })
            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
        </div>

        <!-- Position -->
        <div class="form-group">
            @Html.LabelFor(m => m.Position)
            @Html.TextBoxFor(m => m.Position, new { @class = "form-control", placeholder = "Enter position" })
            @Html.ValidationMessageFor(m => m.Position, "", new { @class = "text-danger" })
        </div>

        <!-- Department -->
        <div class="form-group">
            @Html.LabelFor(m => m.Department)
            @Html.TextBoxFor(m => m.Department, new { @class = "form-control", placeholder = "Enter department" })
            @Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })
        </div>

        <!-- Save and Cancel Buttons -->
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Staff")" class="btn btn-secondary">Cancel</a>
    } <!-- Ensure this is closed properly -->
</div>
