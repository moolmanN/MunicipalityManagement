@model MunicipalityManagement.Models.ServiceRequest

<h2>Delete Service Request</h2>
<p>Are you sure you want to delete this service request?</p>

<div class="card p-4 shadow-sm">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.RequestID)
        <p><strong>Service Type:</strong> @Model.ServiceType</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "ServiceRequest")" class="btn btn-secondary">Cancel</a>
    }
</div>
