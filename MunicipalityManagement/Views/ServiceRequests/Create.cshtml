@model MunicipalityManagement.Models.ServiceRequest

<h2>Create a New Service Request</h2>

<div class="card p-4 shadow-sm">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(m => m.ServiceType)
            @Html.TextBoxFor(m => m.ServiceType, new { @class = "form-control", placeholder = "Enter service type" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Status)
            @Html.TextBoxFor(m => m.Status, new { @class = "form-control", placeholder = "Enter status" })
        </div>
        <div class="form-group">
            @Html.Label("Citizen")
            @Html.DropDownList("CitizenID", ViewBag.Citizens as SelectList, "Select Citizen", new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="@Url.Action("Index", "ServiceRequest")" class="btn btn-secondary">Cancel</a>
    }
</div>
