@model IEnumerable<MunicipalityManagement.Models.ServiceRequest>

<h2 class="mb-4">Service Requests</h2>
<a class="btn btn-success mb-3" href="@Url.Action("Create", "ServiceRequest")">Add New Service Request</a>

<table class="table table-striped table-hover shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>Service Type</th>
            <th>Status</th>
            <th>Citizen</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.ServiceType</td>
                <td>@request.Status</td>
                <td>@request.Citizen?.FullName</td>
                <td>
                    <a href="@Url.Action("Details", "ServiceRequest", new { id = request.RequestID })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "ServiceRequest", new { id = request.RequestID })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "ServiceRequest", new { id = request.RequestID })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
