@model MunicipalityManagement.Models.Report

@{
    ViewData["Title"] = "Edit Report";
}

<h2 class="mb-4">Edit Report</h2>

<div class="card p-4 shadow-sm">
    @using (Html.BeginForm("Edit", "Reports", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ReportID)

        <!-- Report Type -->
        <div class="form-group">
            @Html.LabelFor(m => m.ReportType)
            @Html.TextBoxFor(m => m.ReportType, new { @class = "form-control", placeholder = "Enter report type" })
            @Html.ValidationMessageFor(m => m.ReportType, "", new { @class = "text-danger" })
        </div>

        <!-- Details -->
        <div class="form-group">
            @Html.LabelFor(m => m.Details)
            @Html.TextAreaFor(m => m.Details, new { @class = "form-control", placeholder = "Enter details", rows = 4 })
            @Html.ValidationMessageFor(m => m.Details, "", new { @class = "text-danger" })
        </div>

        <!-- Citizen Dropdown -->
        <div class="form-group">
            @Html.Label("Citizen")
            @Html.DropDownList("CitizenID", ViewBag.Citizens as SelectList, "Select Citizen", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CitizenID, "", new { @class = "text-danger" })
        </div>

        <!-- Save and Cancel Buttons -->
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@Url.Action("Index", "Reports")" class="btn btn-secondary">Cancel</a>
    }
</div>
