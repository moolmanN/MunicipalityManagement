@model IEnumerable<MunicipalityManagement.Models.Citizen>

<h2 class="mb-4">Citizen Management</h2>
<a class="btn btn-success mb-3" href="@Url.Action("Create", "Citizen")">Add New Citizen</a>
<table class="table table-striped table-hover shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>Full Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var citizen in Model)
        {
            <tr>
                <td>@citizen.FullName</td>
                <td>@citizen.Address</td>
                <td>@citizen.PhoneNumber</td>
                <td>
                    <a href="@Url.Action("Details", "Citizen", new { id = citizen.CitizenID })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "Citizen", new { id = citizen.CitizenID })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Citizen", new { id = citizen.CitizenID })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
