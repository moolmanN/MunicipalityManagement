@model MunicipalityManagement.Models.Citizen

<h2>Delete Citizen</h2>
<p>Are you sure you want to delete this citizen?</p>

<div class="card p-4 shadow-sm">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.CitizenID)
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Citizen")" class="btn btn-secondary">Cancel</a>
    }
</div>
